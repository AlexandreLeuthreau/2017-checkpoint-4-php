{% extends '::base.html.twig' %}

{% block body %}
    <h1 class="page-header">Facturation</h1>
    {{ form_start(form) }}

        <div id="ligneFacture" data-prototype="{{ form_widget(form.lignesFacture.vars.prototype)|e }}">
            {{ form_widget(form.lignesFacture) }}
        </div>
        <div class="form-group text-right">
            <button id="addLigneFacture" class="btn btn-success">Ajouter ligne</button>
            {{ form_widget(form.save, {'attr' : {'class' : 'btn btn-primary'}}) }}
        </div>
        <div class="text-right">
            <p>Prix HT : <span><strong>{{ prixht }} €</strong></span></p>
            <p>Prix TTC : <span><strong>{{ prixttc }} €</strong></span></p>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('javascript/collection_type.js') }}"></script>
{% endblock %}